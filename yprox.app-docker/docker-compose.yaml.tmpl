version: '3.6'

volumes:
    {{ if or (.Vars.system.postgresql.version) (.Vars.system.mariadb.version) -}}
    db-data:
    {{- end }}
    {{ if .Vars.system.redis.version -}}
    redis-data:
    {{- end }}

services:

{{- if .Vars.system.postgresql.version -}}
{{- $postgresql := .Vars.system.postgresql }}

  database:
    image: 'postgres:{{ $postgresql.version }}-alpine'
    ports: [5432]
    environment:
      POSTGRES_USER: 'app'
      POSTGRES_PASSWORD: 'app'
      POSTGRES_DB: 'app'
      TZ: {{ .Vars.system.timezone }}
      PGTZ: {{ .Vars.system.timezone }}
    volumes:
      - db-data:/var/lib/postgresql/data
{{- end }}

{{- if .Vars.system.mariadb.version -}}
{{- $mariadb := .Vars.system.mariadb }}

  database:
    image: 'mariadb:{{ $mariadb.version }}-alpine'
    ports: [3306]
    environment:
      MYSQL_USER: 'app'
      MYSQL_PASSWORD: 'app'
      MYSQL_DATABASE: 'app'
      TZ: {{ .Vars.system.timezone }}
    volumes:
      - db-data:/var/lib/mysql
{{- end }}

{{- if .Vars.system.redis.version }}

  redis:
    image: 'redis:alpine'
    ports: [6379]
    environment:
      TZ: {{ .Vars.system.timezone }}
    volumes:
      - redis-data:/data
{{- end }}
