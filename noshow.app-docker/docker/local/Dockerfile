##################################################################
# This file is automatically generated when running "manala up". #
##################################################################
FROM noshow/noshow-base-application:8.1-latest as application

ARG WWWGROUP

## PHP Config
COPY docker/local/php.ini /usr/local/etc/php/
# Apache config
COPY docker/local/apache.conf /etc/apache2/sites-available/000-default.conf

# Setup APP code
WORKDIR /var/www/html

# Start script
COPY docker/local/docker-entrypoint.sh /usr/local/bin/docker-entrypoint
RUN chmod +x /usr/local/bin/docker-entrypoint

# Finish with 1000 user
RUN groupadd --force -g $WWWGROUP sail
RUN useradd -ms /bin/bash --no-user-group -g $WWWGROUP -u 1000 sail

USER sail
RUN mkdir -p /var/log/supervisor storage/fonts storage/framework/views storage/framework/sessions storage/framework/cache storage/logs

EXPOSE 80
ENTRYPOINT ["docker-entrypoint"]
