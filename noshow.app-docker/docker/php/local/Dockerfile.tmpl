FROM ubuntu:21.04

LABEL maintainer="Guillaume Marmorat"

ARG WWWGROUP

WORKDIR /var/www/html

ENV DEBIAN_FRONTEND noninteractive
ENV TZ=UTC

RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update \
    && apt-get install -y gnupg gosu curl ca-certificates zip unzip git supervisor sqlite3 libcap2-bin libpng-dev python2 \
    && mkdir -p ~/.gnupg \
    && chmod 600 ~/.gnupg \
    && echo "disable-ipv6" >> ~/.gnupg/dirmngr.conf \
    && echo "keyserver hkp://keyserver.ubuntu.com:80" >> ~/.gnupg/dirmngr.conf \
    && gpg --recv-key 0x14aa40ec0831756756d7f66c4f4ea0aae5267a6c \
    && gpg --export 0x14aa40ec0831756756d7f66c4f4ea0aae5267a6c > /usr/share/keyrings/ppa_ondrej_php.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/ppa_ondrej_php.gpg] https://ppa.launchpadcontent.net/ondrej/php/ubuntu hirsute main" > /etc/apt/sources.list.d/ppa_ondrej_php.list \
    && apt-get update \
    && apt-get install -y php{{ .Vars.system.php.version }}-cli php{{ .Vars.system.php.version }}-dev \
      php{{ .Vars.system.php.version }}-bcmath \
      php{{ .Vars.system.php.version }}-curl \
      php{{ .Vars.system.php.version }}-gd \
      php{{ .Vars.system.php.version }}-igbinary \
      php{{ .Vars.system.php.version }}-imagick \
      php{{ .Vars.system.php.version }}-imap \
      php{{ .Vars.system.php.version }}-intl \
      php{{ .Vars.system.php.version }}-ldap \
      php{{ .Vars.system.php.version }}-mbstring \
      php{{ .Vars.system.php.version }}-memcached \
      php{{ .Vars.system.php.version }}-msgpack \
      php{{ .Vars.system.php.version }}-mysql \
      php{{ .Vars.system.php.version }}-pcov \
      php{{ .Vars.system.php.version }}-readline \
      php{{ .Vars.system.php.version }}-redis \
      php{{ .Vars.system.php.version }}-soap \
      php{{ .Vars.system.php.version }}-sqlite3 \
      php{{ .Vars.system.php.version }}-xdebug \
      php{{ .Vars.system.php.version }}-xml \
      php{{ .Vars.system.php.version }}-zip \
      php{{ .Vars.system.php.version }}-pgsql \
    && php -r "readfile('http://getcomposer.org/installer');" | php -- --install-dir=/usr/bin/ --filename=composer \
    && curl -sL https://deb.nodesource.com/setup_16.x | bash - \
    && apt-get install -y nodejs \
    && curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | gpg --dearmor | tee /usr/share/keyrings/yarn.gpg >/dev/null \
    && echo "deb [signed-by=/usr/share/keyrings/yarn.gpg] https://dl.yarnpkg.com/debian/ stable main" > /etc/apt/sources.list.d/yarn.list \
    && apt-get update \
    && apt-get install -y yarn \
    && apt-get install -y mysql-client \
    && apt-get -y autoremove \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN setcap "cap_net_bind_service=+ep" /usr/bin/php{{ .Vars.system.php.version }}

RUN groupadd --force -g $WWWGROUP sail
RUN useradd -ms /bin/bash --no-user-group -g $WWWGROUP -u 1337 sail

COPY start-container /usr/local/bin/start-container
COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf
COPY php.ini /etc/php/{{ .Vars.system.php.version }}/cli/conf.d/99-sail.ini
RUN chmod +x /usr/local/bin/start-container

RUN mkdir -p storage/fonts storage/framework/views storage/framework/sessions storage/framework/cache

EXPOSE 8000

ENTRYPOINT ["start-container"]
