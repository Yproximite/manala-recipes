{
    "name": "yproximite/{{ .app_name | toYaml }}",
    "description": "Y-Proximite - Sylius",
    "minimum-stability": "dev",
    "license": "proprietary",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Yproximite/SyliusCustomOptionsPlugin"
        },
        {
            "type": "composer",
            "url": "https://repo.packagist.com/yproximite/",
            "packagist.org": false
        }
    ],
    "require": {
        "php": "~8.1",
        "symfony/flex": "^2.2",
        "symfony/psr-http-message-bridge": "^2.3",
        "yproximite/sylius-plugin": "dev-main"
    },
    "require-dev": {
        "behat/behat": "^3.7",
        "behat/mink-selenium2-driver": "~1.6.0",
        "dama/doctrine-test-bundle": "^6.6",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.9",
        "lakion/mink-debug-extension": "^2.0.0",
        "lchrusciel/api-test-case": "^5.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.3",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^8.5",
        "symfony/browser-kit": "*",
        "symfony/debug-bundle": "*",
        "symfony/intl": "*",
        "symfony/maker-bundle": "^1.33",
        "symfony/web-profiler-bundle": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "scripts": {
        "auto-scripts": {
            "ckeditor:install --clear=drop --tag=4.22.1": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "sylius:theme:assets:install %PUBLIC_DIR%": "symfony-cmd",
            "sylius-plugin:common-files:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "allow-plugins": {
            "symfony/thanks": false,
            "symfony/flex": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": "true",
            "require": "6.4.*"
        }
    }
}
